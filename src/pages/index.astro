---
import Layout from '../layouts/Layout.astro';
import Showcase from '../components/Showcase.astro';
import Features from '../components/Features.astro';
import Tabs from '../components/Tabs.astro';
import Test from '../components/Test.astro';

const name = 'Astro';
const style = 'purple';
const visible = false;
const response = await fetch(
  'http://jsonplaceholder.typicode.com/users?_limit=10'
);
const users = await response.json();
---

<Layout title='hello' â‰¥>
  <h1 class={style}>Hello {name}</h1>
  <ul>
    {users.map((user: { name: unknown }) => <li>{user.name}</li>)}
  </ul>

  {visible ? <p>I am visible</p> : <p>I am not visible</p>}

  <Showcase />

  <Features />
  <section class='page-content'>
    <div class='container'>
      <Tabs
        headings={['NPM', 'PNPM', 'YARN']}
        contents={[
          '$ npm create astro@latest',
          '$ pnpm create astro@latest',
          '$ yarn create astro',
        ]}
      />
    </div>
  </section>
</Layout>
